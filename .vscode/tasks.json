{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build server (win)",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/std:c++17",
                "/I${workspaceRoot}/thirdparty/boost",
                "/nologo",
                "/D__CPP_NAT_BUILD_SERVER__",
                "/MD",
                "/D_WIN32_WINNT=0x0601",
                "/DNDEBUG",
                "/Ox",
                "/Fe:",
                "${workspaceFolder}\\bin\\server.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\server\\server.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "build client (win)",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/std:c++17",
                "/I${workspaceRoot}/thirdparty/boost",
                "/nologo",
                "/MD",
                "/D_WIN32_WINNT=0x0601",
                "/DNDEBUG",
                "/Ox",
                "/Fe:",
                "${workspaceFolder}\\bin\\client.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\client\\client.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "build - win",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++17",
                "/D_WIN32_WINNT=0x0601",
                "/I${workspaceRoot}/thirdparty/boost",
                "/nologo",
                "/MDd",
                "/Fe:",
                "${workspaceFolder}\\bin\\main.exe",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\server\\server.cpp",
                "${workspaceFolder}\\src\\client\\client.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "build - linux",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "/mnt/g/repository/boost",
                "-L",
                "/mnt/g/repository/boost/stage/lib/",
                "-l",
                "boost_filesystem",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/main",
                "-pthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/g++",
        }
    ],
    "version": "2.0.0"
}